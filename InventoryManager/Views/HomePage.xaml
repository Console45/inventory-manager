<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="#F2F5FA"
             x:Class="InventoryManager.Views.HomePage">
    <ScrollView>
        <VerticalStackLayout Spacing="25"
                     Padding="100"
                 >
       
             <FlexLayout JustifyContent="SpaceBetween" Direction="Row" AlignItems="Start" >
                   <Label x:Name="Header"
                       FontAttributes="Bold"
                       FontSize="50" Text="Welcome" TextColor="#184780">
                </Label>
                  <Label x:Name="Page"
                       FontAttributes="Bold"
                       FontSize="40" Text="Dashboard" TextColor="#184780">
                </Label>

            </FlexLayout>
            <Line X1="0"
                  X2="450"
                  StrokeThickness="3"
      Stroke="#184780" />


        </VerticalStackLayout>
    </ScrollView>
</ContentPage>